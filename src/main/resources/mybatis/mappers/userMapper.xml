<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oneteam.dormease.user.member.IUserMapper">
    <select id="selectDuplicateByID" parameterType="String" resultType="boolean">
        SELECT count(*)
        FROM (SELECT id
              FROM student
              UNION
              SELECT id
              FROM parents) a
        WHERE id = #{id}
    </select>
    <select id="selectStudentByNo" parameterType="String">
        SELECT *
        FROM student
        WHERE
            no = #{no}
    </select>
    <select id="selectParentByNo" parameterType="String">
        SELECT *
        FROM parents
        WHERE
            no = #{no}
    </select>
    <update id="updateStudentPassword" parameterType="String">
        UPDATE
            student
        set password = #{password}
        WHERE
            no = #{no}
    </update>
    <update id="updateParentPassword" parameterType="String">
        UPDATE
            parents
        SET password = #{password}
        WHERE
            no = #{no}
    </update>
    <update id="updateStudentAuthNoByNameAndPhone" parameterType="com.oneteam.dormease.user.member.sms.SmsDTO">
        UPDATE
            student
        SET auth_no = #{content}
        WHERE name = #{name}
          AND phone = #{to}
    </update>
    <update id="updateParentAuthNoByNameAndPhone" parameterType="com.oneteam.dormease.user.member.sms.SmsDTO">
        UPDATE
            parents
        SET auth_no = #{content}
        WHERE name = #{name}
          AND phone = #{to}
    </update>
    <select id="selectStudentByNameAndPhone" parameterType="com.oneteam.dormease.user.member.sms.SmsDTO">
        SELECT *
        FROM student
        WHERE name = #{name}
          AND phone = #{to}
    </select>
    <select id="selectParentByNameAndPhone" parameterType="com.oneteam.dormease.user.member.sms.SmsDTO">
        SELECT *
        FROM parents
        WHERE name = #{name}
          AND phone = #{to}
    </select>
</mapper>